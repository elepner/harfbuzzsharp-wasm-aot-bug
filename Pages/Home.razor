    private void OnPaintSurface(SKPaintSurfaceEventArgs e)
    {
        // Get the canvas and clear it with a white background
        var canvas = e.Surface.Canvas;
        canvas.Clear(SKColors.White);

        // Create paint for the text
        using var paint = new SKPaint
        {
            Color = SKColors.Black,
            IsAntialias = true,
            TextSize = 24
        };

        // Draw the text at a specific location
        canvas.DrawText("Yo canvas!", 50, 50, paint);
        // Console.WriteLine(FontRuler.Instance.AvailableFonts);
    }

